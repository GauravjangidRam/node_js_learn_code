<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMeTC6ZJtD8/aFjbtGoVdP1ZKSE0HsqTKywp4Gn" crossorigin="anonymous">
</head>

<body class="bg-gray-900 text-gray-200 min-h-screen flex flex-col">
    <div class="flex flex-col md:flex-row h-screen">
        <!-- Left Side: User Profile and Create Post Form -->
        <div class="bg-gray-800 md:w-1/3 lg:w-1/4 p-6 flex flex-col items-center shadow-lg">
            <!-- Profile Image with Adjusted Sizing and Centering -->
            <div class="w-20 h-20 rounded-full overflow-hidden mb-4">
                <img src="/images/upload/<%= user.defaultProfile ? user.defaultProfile : 'defaultProfile.png' %>" class="w-full h-full object-cover" alt="default image">
            </div>
            <h1 class="text-indigo-400 text-3xl font-semibold mb-4"><%= user.name %></h1>
            <div class="text-gray-400 text-sm text-center">
                <p>Username: <span class="text-white"><%= user.username %></span></p>
                <p>Email: <span class="text-white"><%= user.email %></span></p>
                <p>Age: <span class="text-white"><%= user.age %></span></p>
            </div>
            
            <!-- Create Post Form -->
            <div class="bg-gray-700 p-4 rounded-lg mt-6 w-full">
                <h2 class="text-indigo-400 text-xl font-semibold mb-2 text-center">Create a Post</h2>
                <form action="/post" method="post">
                    <div class="mt-4">
                        <textarea id="post-content" required class="bg-gray-600 text-white rounded-md p-2 w-full h-24" placeholder="Write your post here..." name="content"></textarea>
                    </div>
                    <button type="submit" id="submit-post" class="w-full mt-4 bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 rounded">
                        Submit Post
                    </button>
                </form>
            </div>
        </div>

        <!-- Right Side: Posts Display Section -->
        <div class="flex-grow p-6 bg-gray-900 overflow-y-auto">
            <h3 class="text-indigo-400 text-2xl font-semibold mb-4">Posts by <%= user.name %></h3>
            <div class="space-y-4">
                <!-- Loop through user's posts and display each post -->
                <% if(user.posts && user.posts.length > 0) { %>
                <% user.posts.reverse().forEach(function(post) { %>
                    <div class="relative bg-gray-800 p-4 rounded-lg shadow-md flex items-start space-x-4">
                        <!-- Post Content and Date -->
                        <div class="flex-grow">
                            <p class="text-gray-200 mb-2"><%= post.content %></p>
                            <p class="text-gray-500 text-sm">Posted on: <%= new Date(post.date).toLocaleDateString() %></p>
                        </div>

                        <!-- Like, Edit, and Delete Buttons -->
                        <div class="flex items-center space-x-2">
                            <span class="text-indigo-500"><%= post.likes.length %> like<%= post.likes.length !== 1 ? 's' : '' %></span>
                            <button class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-1 px-3 rounded">
                                <a href="/like/<%= post._id %>" class="flex items-center space-x-2">
                                    <i class="fas fa-thumbs-up"></i>
                                    <span><%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %></span>
                                </a>
                            </button>
                            <button class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded">
                                <a href="/edit/<%= post._id %>" class="flex items-center space-x-2">
                                    <i class="fas fa-edit"></i>
                                    <span>Edit</span>
                                </a>
                            </button>
                            <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded" id="delete-btn">
                                <a href="/delete/<%= post._id %>" class="flex items-center space-x-2">
                                    <i class="fas fa-trash-alt"></i>
                                    <span>Delete</span>
                                </a>
                            </button>
                        </div>
                    </div>
                <% }) %>
                <% } else { %>
                    <p class="text-center text-gray-600">No posts found.</p>
                <% } %>
            </div>
        </div>
    </div>
</body>

<script>
    // Confirmation on Delete Button
    document.querySelectorAll('#delete-btn').forEach(btn => {
        btn.addEventListener('click', function(e) {
            if (!confirm('Are you sure you want to delete this post?')) {
                e.preventDefault();
            }
        });
    });
</script>
</html>
